<section class="instagram-scroll-feed" style="padding: 60px 0;">
  <div class="page-width">

    <!-- Heading and Instagram Button -->
    <div style="display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 20px;">
      <h2 style="margin: 0;">{{ section.settings.heading }}</h2>
      <a href="{{ section.settings.instagram_url }}" target="_blank" class="button" style="padding: 10px 20px; background: #000; color: #fff; text-decoration: none; border-radius: 5px;">
        Follow on Instagram
      </a>
    </div>

    <!-- Scrollable Image Feeds -->
    <div class="scroll-images" style="margin-top: 30px; display: flex; overflow-x: auto; gap: 20px; scroll-snap-type: x mandatory;">
      {% for block in section.blocks %}
        {% if block.settings.image %}
          <div style="flex: 0 0 auto; scroll-snap-align: start;">
            <img 
              src="{{ block.settings.image | img_url: '500x' }}" 
              alt="{{ block.settings.image.alt | escape }}"
              style="width: 100%; max-width: 250px; height: auto; border-radius: 6px;">
          </div>
        {% endif %}
      {% endfor %}
    </div>

  </div>
</section>

{% schema %}
{
  "name": "Instagram Scroll Feed",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "See Our Latest Posts"
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram URL"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Instagram Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "max_blocks": 20,
  "presets": [
    {
      "name": "Instagram Feed Scroll",
      "category": "Social"
    }
  ]
}
{% endschema %}
