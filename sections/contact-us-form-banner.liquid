{%- style -%}
  form#contact_form{
    background: none !important;
    max-width: 552px;
}
  form#contact_form input {
    background: none;
    border: none;
    border-bottom: 1px solid #FFFFFF80;
    font-family: Poppins;
    font-weight: 300;
    font-size: 16px;
    line-height: 150%;
    letter-spacing: 0%;
    vertical-align: middle;
    color: #FFFFFF80 !important;
}
  form#contact_form textarea {
    background: none;
    border: none;
    border-bottom: 1px solid #FFFFFF80;
    font-family: Poppins;
    font-weight: 300;
    font-size: 16px;
    line-height: 150%;
    letter-spacing: 0%;
    vertical-align: middle;
    color: #FFFFFF80 !important;
}
  form#contact_form button.btn{
    min-width: 124px;
    min-height: 36px;
    border-radius: 12px;
    padding: 0;
    border: none;
}
  form#contact_form ::placeholder {
  color: #FFFFFF80 !important;
}
{%- endstyle -%}
<section class="contact-banner-form" style="background-image: url({{ section.settings.background_image | img_url: '1600x' }}); background-size: cover; background-position: center; padding: 80px 0;">
  <div class="page-width">
    <form method="post" action="/contact#contact_form" id="contact_form" accept-charset="UTF-8" class="form" style="background: rgba(255,255,255,0.9); padding: 30px; border-radius: 8px;">
      <input type="hidden" name="form_type" value="contact">
      <input type="hidden" name="utf8" value="âœ“">

      <div style="display: flex; gap: 20px; margin-bottom: 20px;">
        <input type="text" name="contact[first_name]" placeholder="First Name" required class="input" style="flex: 1;">
        <input type="text" name="contact[last_name]" placeholder="Last Name" required class="input" style="flex: 1;">
      </div>

      <div style="margin-bottom: 20px;">
        <input type="email" name="contact[email]" placeholder="Email" required class="input" style="width: 100%;">
      </div>

      <div style="margin-bottom: 20px;">
        <textarea name="contact[body]" placeholder="Your Message" rows="6" required class="textarea" style="width: 100%;"></textarea>
      </div>

      <button type="submit" class="btn" style="padding: 12px 24px;">{{ section.settings.button_label }}</button>
    </form>
  </div>
</section>

{% schema %}
{
  "name": "Contact Form",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Submit Button Label",
      "default": "Send Message"
    }
  ],
  "presets": [
    {
      "name": "Contact Banner Form"
    }
  ]
}
{% endschema %}
