{%- style -%}
  .cta-content {
      max-width: 350px !important;
      margin: 0 !important;
      padding: 0px !important;
      text-align: left;
  }
  
{%- endstyle -%}
<section
  class="contact-cta-banner contact__main_section"
  style="background-image: url('{{ section.settings.bg_image | img_url: 'master' }}'); background-size: cover; background-position: center; padding: 100px 20px; text-align: center; color: white;"
>
  <div class="page-width">
    <div class="cta-content" style="max-width: 700px; margin: 0 auto;">
      <h2 style="font-size: 2.5rem; margin-bottom: 20px;">{{ section.settings.heading }}</h2>
      <p style="font-size: 1.2rem; margin-bottom: 30px;">{{ section.settings.text }}</p>
      <a href="{{ section.settings.link_url }}" class="cta-button" style="background-color: white; color: black; padding: 12px 30px; text-decoration: none; border-radius: 4px;">
        {{ section.settings.link_text }}
      </a>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Contact us discover",
  "settings": [
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background Image",
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Ready to Connect?"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "Reach out to us today and discover how we can help you."
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Link Text",
      "default": "Discover More"
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "Link URL"
    }
  ]
}
{% endschema %}
