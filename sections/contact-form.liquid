{% style %}
     .heading.h2 {
        font-weight: 700 !important;
        font-size: 64px !important;
        vertical-align: middle;
        text-transform: uppercase;
        text-align: left;
        letter-spacing: 2.56px;
        width: 100%;
    }
  .section_area  .heading.h2 {
        text-align: center;
    } 

    input {
        font-family: DM Sans;
        font-weight: 700 !important;
        font-size: 16px !important;
        width: 100%;
        border: 1px solid #3A3A3A1A;
        background: #FFFFFF !important;
        color: #0E0E0E99 !important;
    }

    textarea {
        font-family: DM Sans;
        font-weight: 700 !important;
        font-size: 16px !important;
        width: 100%;
        background: #FFFFFF !important;
        color: #0E0E0E99 !important;
    }

    .input__field {
        font-family: DM Sans;
        font-weight: 700 !important;
        font-size: 16px !important;
        width: 100%;
        background: #FFFFFF !important;
        color: #0E0E0E99 !important;
        border: none;
    }

    .input__label {
        font-family: DM Sans;
        font-weight: 700 !important;
        font-size: 16px !important;
        width: 100%;
        background: #FFFFFF !important;
        color: #0E0E0E99 !important;
    }

    *::placeholder {
        color: #0E0E0E99 !important;
    }

    *:focus {
        outline: none !important;
        border: none !important;
        box-shadow: 0 0 0 0 !important;
    }

    .input_group {
        display: flex;
        gap: 15px;
        margin-bottom: 15px;
    }

    .input-wrapper {
        width: 100% !important;
    }

    button.form__submit.button.button--primary.button--full {
        border-radius: 100rem !important;
        margin-top: 15px;
        background: #DD3F21;
    }
    button.form__submit.button.button--primary.button--full:hover{
      background: #dd3f22b8;
    }
    .contact__form {
        max-width: 704px !important;
    }
      .contact__main {
        display: grid;
        grid-template-columns: 1fr 1fr;
    }
    .icon-detail {
      display: grid;
      grid-template-columns: 40px 1fr;
      column-gap: 18px;
      margin-bottom: 12px;
  }
  .heading{
    font-family: DM Sans;
    font-weight: 700;
    font-size: 18px;
    vertical-align: middle;
    text-transform: uppercase;
    color: #0E0E0E;

  }
  .detail-text{
    font-family: DM Sans;
    font-weight: 300;
    font-size: 16px;
    vertical-align: middle;
    color: #0E0E0E;


  }
    @media screen and (max-width: 1376px) {
        .section{
            width: 100%;
            margin: 0 auto !important;
        }
    }
  @media screen and (max-width: 767px) {
    .contact__main_section .heading.h2 {
        font-size: 28px !important;
    }
    .input_group {
        display: block !important;
    }
    .input-wrapper {
    width: 100% !important;
    margin-bottom: 15px !important;
}
}
{% endstyle %}

{%- if section.settings.background != settings.background and section.settings.background != 'rgba(0,0,0,0)' -%}
  {%- assign blends_with_background = false -%}
{%- else -%}
  {%- assign blends_with_background = true -%}
{%- endif -%}

<style>
  #shopify-section-{{ section.id }} {
    {%- if section.settings.background == 'rgba(0,0,0,0)' -%}
      {%- assign section_background = settings.background -%}
    {%- else -%}
      {%- assign section_background = section.settings.background -%}
    {%- endif -%}

    {%- if section.settings.text_color == 'rgba(0,0,0,0)' -%}
      {%- assign heading_color = settings.heading_color -%}
      {%- assign text_color = settings.text_color -%}
    {%- else -%}
      {%- assign heading_color = section.settings.text_color -%}
      {%- assign text_color = section.settings.text_color -%}
    {%- endif -%}

    {%- if section.settings.button_background == 'rgba(0,0,0,0)' -%}
      {%- assign button_background = settings.primary_button_background -%}
    {%- else -%}
      {%- assign button_background = section.settings.button_background -%}
    {%- endif -%}

    {%- if section.settings.button_text_color == 'rgba(0,0,0,0)' -%}
      {%- assign button_text_color = settings.primary_button_text_color -%}
    {%- else -%}
      {%- assign button_text_color = section.settings.button_text_color -%}
    {%- endif -%}

    --heading-color: {{ heading_color.red }}, {{ heading_color.green }}, {{ heading_color.blue }};
    --text-color: {{ text_color.red }}, {{ text_color.green }}, {{ text_color.blue }};
    --primary-button-background: {{ button_background.red }}, {{ button_background.green }}, {{ button_background.blue }};
    --primary-button-text-color: {{ button_text_color.red }}, {{ button_text_color.green }}, {{ button_text_color.blue }};

    --section-background: {{ section_background.red }}, {{ section_background.green }}, {{ section_background.blue }};
  }
</style>

<section class="section one_area {% if template.name == 'page' and template.suffix contains 'contact' %}section--tight{% endif %} {% unless blends_with_background %}section--flush{% endunless %}">
  <div class="section__color-wrapper">
      <div class="contact {% unless blends_with_background %}vertical-breather{% endunless %}">
        {%- capture aside_content -%}
          {%- if section.settings.image != blank -%}
            {{- section.settings.image | image_url: width: section.settings.image.width | image_tag: loading: 'lazy', sizes: '(max-width: 740px) calc(100vw - 24px * 2), 530px', widths: '200,300,400,500,600,800,1000,1200,1400', class: 'contact__image' -}}
          {%- endif -%}

          {%- capture aside_text_1 -%}
            {%- if section.settings.text_1_heading != blank or section.settings.text_1_text != blank -%}
              {%- if section.settings.text_1_heading != blank -%}
                <p class="heading heading--small">{{ section.settings.text_1_heading | escape }}</p>
              {%- endif -%}

              {%- if section.settings.text_1_text != blank -%}
                <div class="rte">
                  {{- section.settings.text_1_text -}}
                </div>
              {%- endif -%}
            {%- endif -%}
          {%- endcapture -%}

          {%- capture aside_text_2 -%}
            {%- if section.settings.text_2_heading != blank or section.settings.text_2_text != blank -%}
              {%- if section.settings.text_2_heading != blank -%}
                <p class="heading heading--small">{{ section.settings.text_2_heading | escape }}</p>
              {%- endif -%}

              {%- if section.settings.text_2_text != blank -%}
                <div class="rte">
                  {{- section.settings.text_2_text -}}
                </div>
              {%- endif -%}
            {%- endif -%}
          {%- endcapture -%}

          {%- if aside_text_1 != blank or aside_text_2 != blank -%}
            <div class="contact__text-list">
              {%- if aside_text_1 != blank -%}
                <div class="contact__text-item text-container">
                  {{- aside_text_1 -}}
                </div>
              {%- endif -%}

              {%- if aside_text_2 != blank -%}
                <div class="contact__text-item text-container">
                  {{- aside_text_2 -}}
                </div>
              {%- endif -%}
            </div>
          {%- endif -%}
        {%- endcapture -%}
 
        <div class="contact__main">
          <div class="contact-left-section">
          {%- if section.settings.title != blank or section.settings.content != blank -%}
            <header class="section__header {% if section.settings.content != blank %}section__header--tight{% endif %}">
              {%- if section.settings.title != blank -%}
                <h1 class="heading h2">{{ section.settings.title }}</h1>
              {%- endif -%}

              {%- if section.settings.content != blank -%}
                {{- section.settings.content -}}
              {%- endif -%}
            </header>
          {%- endif -%}

            <div class="three-icons-container">
            <div class="icon-detail">
              <div class="img_icon_area">
                {% if section.settings.icon_1 %}
                  <img src="{{ section.settings.icon_1 | img_url: '40x40' }}" alt="{{ section.settings.heading_1 }}">
                {% endif %}
              </div>
              <div>
                <div class="heading">{{ section.settings.heading_1 }}</div>
                <div class="detail-text">{{ section.settings.detail_1 }}</div>
              </div>
            </div>
            <div class="icon-detail">
              <div class="img_icon_area">
              {% if section.settings.icon_2 %}
                <img src="{{ section.settings.icon_2 | img_url: '40x40' }}" alt="{{ section.settings.heading_2 }}">
              {% endif %}
              </div>
              <div>
                <div class="heading">{{ section.settings.heading_2 }}</div>
                <div class="detail-text">{{ section.settings.detail_2 }}</div>
              </div>
            </div>
            <div class="icon-detail">
               <div class="img_icon_area">
              {% if section.settings.icon_3 %}
               <img src="{{ section.settings.icon_3 | img_url: '40x40' }}" alt="{{ section.settings.heading_3 }}">
              {% endif %}
              </div>
              <div>
                <div class="heading">{{ section.settings.heading_3 }}</div>
                <div class="detail-text">{{ section.settings.detail_3 }}</div>
              </div>
            </div>
            </div>
          
          </div>
          <div class="contact-right-section">
          {%- form 'contact', class: 'contact__form form' -%}
            {%- if form.posted_successfully? -%}
              <div class="banner banner--success form__banner">
                <span class="banner__ribbon">{% render 'icon' with 'form-success' %}</span>
                <p class="banner__content">{{ 'contact.form.successfully_sent' | t }}</p>
              </div>
            {%- endif -%}

            {%- if form.errors -%}
              <div class="form__banner banner banner--error">
                <span class="banner__ribbon">{% render 'icon' with 'form-error' %}</span>

                <div class="banner__content">
                  {{- form.errors | default_errors -}}
                </div>
              </div>
            {%- endif -%}

            <div class="input-group input_group">
              <!-- First Name Field -->
              <div class="input-wrapper">
                <!-- <label for="contact-form-first-name" class="input__label">First Name</label> -->
                <input
                  id="contact-form-first-name"
                  type="text"
                  class="input__field {% if customer.first_name != blank %}is-filled{% endif %}"
                  name="contact[first_name]"
                  placeholder="First Name"
                  aria-label="First Name"
                  required
                  {% if customer and customer.first_name %}
                    value="{{ customer.first_name }}"
                  {% endif %}
                >
              </div>

              <!-- Last Name Field -->
              <div class="input-wrapper">
                <!-- <label for="contact-form-last-name" class="input__label">Last Name</label> -->
                <input
                  id="contact-form-last-name"
                  type="text"
                  class="input__field {% if customer.last_name != blank %}is-filled{% endif %}"
                  name="contact[last_name]"
                  placeholder="Last Name"
                  aria-label="Last Name"
                  required
                  {% if customer and customer.last_name %}
                    value="{{ customer.last_name }}"
                  {% endif %}
                >
              </div>
            </div>

            <div class="input">
              <!-- <label for="contact-form-email" class="input__label">{{ 'contact.form.email' | t }}</label> -->
              <input
                id="contact-form-email"
                type="email" placeholder="{{ 'contact.form.email' | t }}"
                class="input__field {% if customer.email != blank %}is-filled{% endif %}"
                name="contact[email]"
                aria-label="{{ 'contact.form.email' | t }}"
                required
                {% if customer %}
                  value="{{ customer.email }}"
                {% endif %}
              >
            </div>

            {%- for block in section.blocks -%}
              {%- assign field_title = block.settings.title -%}

              {%- if field_title == blank -%}
                {%- capture field_title -%}Custom field {% increment custom_field %}{%- endcapture -%}
              {%- endif -%}

              {%- if block.type == 'text' -%}
                <div class="input">
                  {%- if block.settings.use_long_text -%}
                    <textarea
                      id="contact-form-{{ field_title | handle }}"
                      name="contact[{{ field_title | escape }}]"
                      rows="4" placeholder="{{- block.settings.title | escape -}}" 
                      class="input__field input__field--textarea"
                      aria-label="{{ block.settings.title | escape }}"
                      {% if block.settings.is_required %}
                        required
                      {% endif -%}
                    ></textarea>
                    
                  {%- else -%}
                    <input
                      id="contact-form-{{ field_title | handle }}"
                      type="text" placeholder="{{- block.settings.title | escape -}}" 
                      class="input__field"
                      name="contact[{{ field_title | escape }}]"
                      aria-label="{{ block.settings.title | escape }}"
                      {% if block.settings.is_required %}
                        required
                      {% endif %}
                    >
                  {%- endif -%}
                </div>
              {%- elsif block.type == 'dropdown' -%}
                {%- assign values = block.settings.values | split: ',' -%}

                {%- if values == empty -%}
                  {%- continue -%}
                {%- endif -%}

                <div class="input">
                  <div class="select-wrapper">
                    <select
                      id="contact-form-{{ field_title | handle }}"
                      class="select"  placeholder="{{- block.settings.title | escape -}}" 
                      name="contact[{{ field_title | escape }}]"
                      title="{{ block.settings.title | escape }}"
                      required
                    >
                      <option value="" disabled selected></option>

                      {%- for value in values -%}
                        {%- assign trim_value = value | strip -%}

                        <option value="{{ trim_value | escape }}">{{ trim_value | escape }}</option>
                      {%- endfor -%}
                    </select>

                    {%- render 'icon' with 'chevron' -%}
                  </div>

                  
                </div>
              {%- endif -%}
            {%- endfor -%}

            <div class="input">
              <textarea
                id="contact-form-message"
                name="contact[body]"
                rows="4" placeholder="{{ 'contact.form.message' | t }}" 
                class="input__field input__field--textarea"
                aria-label="{{ 'contact.form.message' | t }}"
                required
              ></textarea>
            </div>

            <button is="loader-button" type="submit" class="form__submit button button--primary button--full">
              {{ 'contact.form.submit' | t }}
            </button>
          {%- endform -%}
          </div>
        </div>

        {%- if aside_content != blank -%}
          <aside class="contact__aside">
            {{- aside_content -}}
          </aside>
        {%- endif -%}
      </div>
  </div>
</section>

