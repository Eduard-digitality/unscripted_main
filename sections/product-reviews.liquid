{% style %}
  .shopify-section{
    padding:  0 15px;
  }
.product-reviews-section {
  padding: 60px 0;
}
  .container
 {
    width: 100%;
    max-width: 100%;
    padding: 0 !important;
    margin: 0 auto;
}
.product-reviews-wrapper {
  display: flex;
  gap: 70px;
  align-items: flex-start;
  max-width: 1376px;
  margin: 0 auto;
}
.product-reviews-left {
  flex: 1 1 20%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  gap: 20px;
}
.product-reviews-heading {
  font-size: 28px;
  font-weight: 600;
}
.review-slider-buttons {
  display: flex;
  gap: 15px;
}
.review-slider-button {
  background: #222;
  color: white;
  border: none;
  padding: 10px 15px;
  font-size: 18px;
  cursor: pointer;
  border-radius: 4px;
  user-select: none;
}
.product-reviews-right {
  flex: 1 1 70%;
  overflow: hidden;
  position: relative;
}
.review-cards-container {
  display: flex;
  gap: 20px;
  transition: transform 0.3s ease;
  will-change: transform;
}
.review-card {
  flex: 0 0 300px;
  background: #f9f9f9;
  border-radius: 10px;
  padding: 20px;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  gap: 15px;
  box-shadow: 0 2px 6px rgba(0,0,0,0.1);
}
.review-text {
  font-size: 16px;
  color: #333;
  flex-grow: 1;
}
.review-stars {
  color: #f5a623; /* gold */
  font-size: 18px;
}
.review-user {
  display: flex;
  align-items: center;
  gap: 12px;
}
.review-user-image img {
  width: 48px;
  height: 48px;
  border-radius: 50%;
  object-fit: cover;
}
.review-user-name {
  font-weight: 600;
  font-size: 16px;
  color: #222;
}
  .section__color-wrapper .heading.h3{
    padding: 0 !important
  }
  .shopify-section.shopify-section--text-with-icons .heading.h2{
    padding: 0 !important
  }
  .section__color-wrapper.section_wrapper{
     padding: 0 !important
  }
/* Responsive */
@media (max-width: 768px) {
  .product-reviews-wrapper {
    flex-direction: column;
  }
  .product-reviews-left,
  .product-reviews-right {
    flex: 1 1 100%;
  }
  .review-card {
    flex: 0 0 80%;
  }
}
{% endstyle %}

<section class="product-reviews-section">
  <div class="container">
    <div class="product-reviews-wrapper">

      <div class="product-reviews-left">
        <h2 class="product-reviews-heading">{{ section.settings.heading }}</h2>
        <div class="review-slider-buttons">
          <button id="review-prev" class="review-slider-button" aria-label="Previous reviews">&#8592;</button>
          <button id="review-next" class="review-slider-button" aria-label="Next reviews">&#8594;</button>
        </div>
      </div>

      <div class="product-reviews-right">
        <div id="review-cards" class="review-cards-container">
          {% for block in section.blocks %}
          <div class="review-card">
            <div class="review-text">{{ block.settings.review_text }}</div>
            <div class="review-stars">
              {% assign stars = block.settings.stars | plus: 0 %}
              {% for i in (1..5) %}
                {% if i <= stars %}
                  ★
                {% else %}
                  ☆
                {% endif %}
              {% endfor %}
            </div>
            <div class="review-user">
              <div class="review-user-image">
                {% if block.settings.user_image != blank %}
                  <img src="{{ block.settings.user_image | img_url: '100x100' }}" alt="{{ block.settings.user_name }}">
                {% else %}
                  <img src="https://via.placeholder.com/48?text=User" alt="User Image">
                {% endif %}
              </div>
              <div class="review-user-name">{{ block.settings.user_name }}</div>
            </div>
          </div>
          {% endfor %}
        </div>
      </div>

    </div>
  </div>
</section>

<script>
  (() => {
    const prevBtn = document.getElementById('review-prev');
    const nextBtn = document.getElementById('review-next');
    const cardsContainer = document.getElementById('review-cards');

    if (!prevBtn || !nextBtn || !cardsContainer) return;

    let scrollAmount = 0;
    const cardWidth = 320; // card width + gap approx

    prevBtn.addEventListener('click', () => {
      scrollAmount -= cardWidth;
      if(scrollAmount < 0) scrollAmount = 0;
      cardsContainer.style.transform = `translateX(-${scrollAmount}px)`;
    });

    nextBtn.addEventListener('click', () => {
      const maxScroll = cardsContainer.scrollWidth - cardsContainer.clientWidth;
      scrollAmount += cardWidth;
      if(scrollAmount > maxScroll) scrollAmount = maxScroll;
      cardsContainer.style.transform = `translateX(-${scrollAmount}px)`;
    });
  })();
</script>

{% schema %}
{
  "name": "Product Reviews",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Customer Reviews"
    }
  ],
  "blocks": [
    {
      "type": "review",
      "name": "Review Card",
      "settings": [
        {
          "type": "textarea",
          "id": "review_text",
          "label": "Review Text"
        },
       {
          "type": "range",
          "id": "stars",
          "label": "Star Rating (1-5)",
          "min": 1,
          "max": 5,
          "step": 1,
          "default": 5
        },
        {
          "type": "image_picker",
          "id": "user_image",
          "label": "User Image"
        },
        {
          "type": "text",
          "id": "user_name",
          "label": "User Name"
        }
      ]
    }
  ],
  "max_blocks": 20,
  "presets": [
    {
      "name": "Product Reviews",
      "category": "Product"
    }
  ]
}
{% endschema %}
