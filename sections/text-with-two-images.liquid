<section class="text-with-two-images" style="padding: 60px 0;">
  <div class="page-width">
    <div class="grid grid--3-col" style="gap: 30px; align-items: center;">

      <!-- Text Column -->
      <div class="grid__item">
        {% if section.settings.heading != blank %}
          <h2>{{ section.settings.heading }}</h2>
        {% endif %}
        {% if section.settings.text != blank %}
          <p>{{ section.settings.text }}</p>
        {% endif %}
      </div>

      <!-- Image 1 -->
      <div class="grid__item">
        {% if section.settings.image_1 %}
          <img
            src="{{ section.settings.image_1 | img_url: '800x' }}"
            alt="{{ section.settings.image_1.alt | escape }}"
            width="{{ section.settings.image_1.width }}"
            height="{{ section.settings.image_1.height }}"
            style="width: 100%; height: auto;"
          >
        {% endif %}
      </div>

      <!-- Image 2 -->
      <div class="grid__item">
        {% if section.settings.image_2 %}
          <img
            src="{{ section.settings.image_2 | img_url: '800x' }}"
            alt="{{ section.settings.image_2.alt | escape }}"
            width="{{ section.settings.image_2.width }}"
            height="{{ section.settings.image_2.height }}"
            style="width: 100%; height: auto;"
          >
        {% endif %}
      </div>

    </div>
  </div>
</section>

{% schema %}
{
  "name": "Text with Two Images",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our Vision"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "Here's what we stand for and where we're heading."
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Left Image"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Right Image"
    }
  ],
  "presets": [
    {
      "name": "Text with Two Images",
      "category": "About"
    }
  ]
}
{% endschema %}
