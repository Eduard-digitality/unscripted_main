<section
  class="about-full-bg"
  style="
    position: relative;
    background-image: url('{{ section.settings.background_image | image_url: '1600x' }}');
    background-size: cover;
    background-position: center;
    padding: 120px 0;
  "
>
  <div class="page-width">
    <div style="max-width: 500px;">
      {% if section.settings.heading != blank %}
        <h2 style="margin-bottom: 20px;">{{ section.settings.heading }}</h2>
      {% endif %}
      
      {% if section.settings.text != blank %}
        <p style="margin-bottom: 30px;">{{ section.settings.text }}</p>
      {% endif %}
      
      {% if section.settings.button_label != blank and section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" class="button" style="background-color: #fff; color: #000; padding: 12px 24px; text-decoration: none;">
          {{ section.settings.button_label }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Full Background Image",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Inspire with Impact"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "We believe in making bold moves that push the industry forward."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      
    }
  ],
  "presets": [
    {
      "name": "Full Background Image"
    }
  ]
}
{% endschema %}
