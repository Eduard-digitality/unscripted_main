<section class="slider-cards" style="padding: 60px 0;">
  <div class="page-width">
    
    {% if section.settings.heading != blank %}
      <h2 class="slider-heading" style="text-align: center;">{{ section.settings.heading }}</h2>
    {% endif %}

    <div class="slider-wrapper" style="overflow-x: auto; display: flex; gap: 20px; padding-top: 30px; scroll-snap-type: x mandatory;">
      {% for block in section.blocks %}
        <div class="slider-card" style="flex: 0 0 auto; width: 300px; scroll-snap-align: start; background: #f9f9f9; padding: 20px; border-radius: 10px;">
          {% if block.settings.image %}
            <img 
              src="{{ block.settings.image | img_url: '400x' }}" 
              alt="{{ block.settings.image.alt | escape }}" 
              style="width: 100%; height: auto; border-radius: 8px;">
          {% endif %}
          
          {% if block.settings.card_heading != blank %}
            <h3 style="margin-top: 15px;">{{ block.settings.card_heading }}</h3>
          {% endif %}
          
          {% if block.settings.card_text != blank %}
            <p>{{ block.settings.card_text }}</p>
          {% endif %}
        </div>
      {% endfor %}
    </div>
    
  </div>
</section>

{% schema %}
{
  "name": "Slider Cards",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Our Team Members"
    }
  ],
  "blocks": [
    {
      "type": "card",
      "name": "Slider Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Card Image"
        },
        {
          "type": "text",
          "id": "card_heading",
          "label": "Card Heading",
          "default": "John Doe"
        },
        {
          "type": "textarea",
          "id": "card_text",
          "label": "Card Text",
          "default": "Team Lead & Visionary"
        }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "Slider Cards",
      "category": "About"
    }
  ]
}
{% endschema %}
